    "test": "node --run test:unit && node --run lint && node --run test:spelling",
    "test:spelling": "cspell .",
    "test:unit": "node --test tests/unit/**/*.test.mjs"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
